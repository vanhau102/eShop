<div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">{{action}} sản phẩm </h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="mt-2">
							<label class="control-label">Tên sản phẩm</label>
							<input class="form-control" v-model="productData.name" />
						</div>
						<div class="mt-2">
							<label class="control-label">Mô tả</label>
							<input class="form-control" v-model="productData.description" />
						</div>
						<div class="mt-2">
							<label class="control-label">Giá</label>
							<input class="form-control" v-model="productData.price" />
						</div>
						<div class="mt-2">
							<label class="control-label">Tồn kho</label>
							<input class="form-control" v-model="productData.inStock" />
						</div>
						<div class="mt-2">
							<label class="control-label">Chọn danh mục</label>
							<vc:select-list-category v-model="productData.categoryId"></vc:select-list-category>
						</div>

						<div class="mt-2">
							<input type="button" v-on:click="addOrUpdate()" :value="action" class="btn btn-primary" />
						</div>
					</div>
				</div>
			</div>
			
		</div>
	</div>
</div>